{% extends 'default.html.twig' %}

{% block content %}

<h1>Media creation</h1>

{% if form.vars.errors|length %}
<div class="alert alert-error">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  {{ form_errors(form) }}
</div>
{% endif %}

<form action="{{ path('media_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_rest(form) }}
    <p>
        <button class="btn btn-small btn-primary" type="submit">Create</button>
    </p>
</form>

<ul class="record_actions unstyled container inline">
    <li>
        <a class="btn btn-small" href="{{ path('media') }}">
            Back to the list
        </a>
    </li>
</ul>

{% endblock %}