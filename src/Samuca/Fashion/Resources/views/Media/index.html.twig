{% extends 'default.html.twig' %}

{% block content %}

<h1>Media list</h1>

<table class="records_list table table-striped table-hover table-condensed span12">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Src</th>
            <th>Caption</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('media_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>
            {% if entity.src is not null %}
              <img src="/uploads/thumbs/{{ entity.src }}">
            {% endif %}
            </td>
            <td>{{ entity.caption }}</td>
            <td>
                <ul class="unstyled inline">
                    <li>
                        <a class="btn btn-mini" href="{{ path('media_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-mini" href="{{ path('media_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="unstyled container">
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('media_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}