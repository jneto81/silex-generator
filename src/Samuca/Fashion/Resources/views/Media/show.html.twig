{% extends 'default.html.twig' %}

{% block content %}

<h1>{{ "Media"|trans }}</h1>

<table class="record_properties table table-striped table-hover table-condensed">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "Title"|trans }}</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>{{ "Caption"|trans }}</th>
            <td>{{ entity.caption }}</td>
        </tr>
         <tr>
            <th>{{ "Src"|trans }}</th>
            <td>
            {% if entity.src is not null %}
              <img src="/contents/thumbs/{{ entity.src }}">
            {% endif %}
            </td>
        </tr>
    </tbody>
</table>

<ul class="record_actions unstyled container inline">
    <li>
        <a class="btn btn-small" href="{{ path('media') }}">
            {{ "Back to the list"|trans }}
        </a>
    </li>
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('media_edit', { 'id': entity.id }) }}">
            {{ "Edit"|trans }}
        </a>
    </li>
    <li>
        <form action="{{ path('media_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-small btn-danger" type="submit">{{ "Delete"|trans }}</button>
        </form>
    </li>
</ul>

{% endblock %}