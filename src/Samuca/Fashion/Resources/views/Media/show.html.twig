{% extends 'default.html.twig' %}

{% block content %}

<h1>Media</h1>

<table class="record_properties table table-striped table-hover table-condensed">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Src</th>
            <td>
            {% if entity.src is not null %}
              <img src="/uploads/thumbs/{{ entity.src }}">
            {% endif %}
            </td>
        </tr>
        <tr>
            <th>Caption</th>
            <td>{{ entity.caption }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions unstyled container inline">
    <li>
        <a class="btn btn-small" href="{{ path('media') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('media_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('media_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-small btn-danger" type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}