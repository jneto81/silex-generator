{% extends 'default.html.twig' %}

{% block content %}

<h1>{{ "Brand"|trans }}</h1>

<table class="record_properties table table-striped table-hover table-condensed">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "Name"|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
				<tr>
            <th>{{ "Segment"|trans }}</th>
            <td>{{ entity.segment is not null ? entity.segment.name : '' }}</td>
        </tr>
				<tr>
            <th>{{ "Description"|trans }}</th>
            <td>{{ wordwrap(entity.description, 50, "...")|raw }}</td>
        </tr>
				<tr>
            <th>{{ "Type"|trans }}</th>
            <td>{{ entity.type }}</td>
        </tr>
				<tr>
            <th>{{ "Keyword"|trans }}</th>
            <td>{{ entity.keyword }}</td>
        </tr>
				<tr>
            <th>{{ "Region"|trans }}</th>
            <td>{{ entity.region is not null ? entity.region.name : '' }}</td>
        </tr>
        <tr>
            <th>{{ "Logo"|trans }}</th>
            <td>
            {% if entity.logo is not null %}
              <img src="/uploads/thumbs/{{ entity.logo }}">
            {% endif %}
            </td>
        </tr>
    </tbody>
</table>

<ul class="record_actions unstyled container inline">
    <li>
        <a class="btn btn-small" href="{{ path('brand') }}">
            {{ "Back to the list"|trans }}
        </a>
    </li>
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('brand_edit', { 'id': entity.id }) }}">
            {{ "Edit"|trans }}
        </a>
    </li>
    <li>
        <form action="{{ path('brand_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-small btn-danger" type="submit">{{ "Delete"|trans }}</button>
        </form>
    </li>
</ul>

{% endblock %}