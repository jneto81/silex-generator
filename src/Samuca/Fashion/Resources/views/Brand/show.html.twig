{% extends 'default.html.twig' %}

{% block content %}

<h1>Brand</h1>

<table class="record_properties table table-striped table-hover table-condensed">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
				<tr>
            <th>Logo</th>
            <td>
            {% if entity.logo is not null %}
              <img src="/uploads/thumbs/{{ entity.logo }}">
            {% endif %}
            </td>
        </tr>
				<tr>
            <th>Segment</th>
            <td>{{ entity.segment }}</td>
        </tr>
				<tr>
            <th>Description</th>
            <td>{{ wordwrap(entity.description, 50, "...")|raw }}</td>
        </tr>
				<tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
				<tr>
            <th>Keyword</th>
            <td>{{ entity.keyword }}</td>
        </tr>
				<tr>
            <th>Region</th>
            <td>{{ entity.region }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions unstyled container inline">
    <li>
        <a class="btn btn-small" href="{{ path('brand') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('brand_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('brand_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-small btn-danger" type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}