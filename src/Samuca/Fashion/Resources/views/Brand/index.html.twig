{% extends 'default.html.twig' %}

{% block content %}

<h1>Brand list</h1>

<table class="records_list table table-striped table-hover table-condensed span12">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
						<th>Logo</th>
						<th>Segment</th>
						<th>Description</th>
						<th>Type</th>
						<th>Keyword</th>
						<th>Region</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('brand_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
						<td>
            {% if entity.logo is not null %}
              <img src="/uploads/thumbs/{{ entity.logo }}">
            {% endif %}
            </td>
						<td>{{ entity.segment }}</td>
						<td>{{ wordwrap(entity.description, 50, "...")|raw }}</td>
						<td>{{ entity.type }}</td>
						<td>{{ entity.keyword }}</td>
						<td>{{ entity.region }}</td>
            <td>
                <ul class="unstyled inline">
                    <li>
                        <a class="btn btn-mini" href="{{ path('brand_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-mini" href="{{ path('brand_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="unstyled container">
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('brand_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}