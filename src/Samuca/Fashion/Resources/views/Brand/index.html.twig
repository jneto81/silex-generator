{% extends 'default.html.twig' %}

{% block content %}

<h1>{{ "Brand"|trans }} {{ "list"|trans }}</h1>

<ul class="unstyled container">
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('brand_new') }}">
            {{ "Create a new entry"|trans }}
        </a>
    </li>
</ul>

<table class="records_list table table-striped table-hover table-condensed span12">
    <thead>
        <tr>
            <th>Id</th>
            <th>{{ "Name"|trans }}</th>
						<th>{{ "Logo"|trans }}</th>
						<th>{{ "Segment"|trans }}</th>
						<th>{{ "Description"|trans }}</th>
						<th>{{ "Type"|trans }}</th>
						<th>{{ "Keyword"|trans }}</th>
            <th>{{ "Actions"|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('brand_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
						<td>
            {% if entity.logo is not null %}
              <img src="/uploads/thumbs/{{ entity.logo }}">
            {% endif %}
            </td>
						<td>{{ entity.segment is not null ? entity.segment.name : '' }}</td>
						<td>{{ wordwrap(entity.description, 50, "...")|raw }}</td>
						<td>{{ entity.type }}</td>
						<td>{{ entity.keyword }}</td>
						<td>
                <ul class="unstyled inline">
                    <li>
                        <a class="btn btn-mini" href="{{ path('brand_show', { 'id': entity.id }) }}">{{ "show"|trans }}</a>
                    </li>
                    <li>
                        <a class="btn btn-mini" href="{{ path('brand_edit', { 'id': entity.id }) }}">{{ "edit"|trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="unstyled container">
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('brand_new') }}">
            {{ "Create a new entry"|trans }}
        </a>
    </li>
</ul>

{% endblock %}