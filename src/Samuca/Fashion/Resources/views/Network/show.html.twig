{% extends 'default.html.twig' %}

{% block content %}

<h1>Network</h1>

<table class="record_properties table table-striped table-hover table-condensed span6">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Link</th>
            <td>{{ entity.link }}</td>
        </tr>
        <tr>
            <th>Brand</th>
            <td>{{ entity.brand.name }}</td>
        </tr>        
    </tbody>
</table>

<ul class="record_actions unstyled container inline">
    <li>
        <a class="btn btn-small" href="{{ path('network') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('network_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('network_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-small btn-danger" type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}