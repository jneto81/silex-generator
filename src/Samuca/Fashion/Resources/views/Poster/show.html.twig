{% extends 'default.html.twig' %}

{% block content %}

<h1>{{ "Poster"|trans }}</h1>

<table class="record_properties table table-striped table-hover table-condensed">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "Size"|trans }}</th>
            <td>{{ entity.size|trans }}</td>
        </tr>
        <tr>
            <th>{{ "Link"|trans }}</th>
            <td>{{ entity.link }}</td>
        </tr>
        <tr>
            <th>{{ "Src"|trans }}</th>
            <td>
            {% if entity.src is not null %}
              <img src="/uploads/thumbs/{{ entity.src }}">
            {% endif %}
            </td>
        </tr>
        <!--
        <tr>
            <th>{{ "Brand"|trans }}</th>
            <td>{{ entity.brand is not null ? entity.brand.name : '' }}</td>
        </tr>        
        -->
    </tbody>
</table>

<ul class="record_actions unstyled container inline">
    <li>
        <a class="btn btn-small" href="{{ path('poster') }}">
            {{ "Back to the list"|trans }}
        </a>
    </li>
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('poster_edit', { 'id': entity.id }) }}">
            {{ "Edit"|trans }}
        </a>
    </li>
    <li>
        <form action="{{ path('poster_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-small btn-danger" type="submit">{{ "Delete"|trans }}</button>
        </form>
    </li>
</ul>

{% endblock %}