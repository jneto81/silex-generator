{% extends 'default.html.twig' %}

{% block content %}

<h1>{{ "Poster"|trans }} {{ "creation"|trans }}</h1>

{% if form.vars.errors|length %}
<div class="alert alert-error">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  {{ form_errors(form) }}
</div>
{% endif %}

<div id="upload-error" class="alert alert-error hide">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  {{ "Format not allowed."|trans }}
</div>

<form action="{{ path('poster_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_rest(form) }}
    
    <p>
        <button class="btn btn-small btn-primary" id="submit-btn" type="submit">{{ "Create"|trans }}</button>
    </p>
</form>

<ul class="record_actions unstyled container inline">
    <li>
        <a class="btn btn-small" href="{{ path('poster') }}">
            {{ "Back to the list"|trans }}
        </a>
    </li>
</ul>

{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="/assets/css/bootstrap-fileupload.min.css">
{% endblock %}

{% block javascripts %}
<script src="/assets/js/bootstrap-fileupload.min.js"></script>
<script src="/assets/js/upload.v2.js"></script>
<script>
	$(function () {    
    Upload.init('#submit-btn');
	});
</script>
{% endblock %}